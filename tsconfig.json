{
    "compilerOptions": {
      "baseUrl": "./",
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2022",
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "./dist/src",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "paths": {
        "@*": ["src/*"],
        "@redis": ["src/services/cache/redis"]
      }
    },
    "lib": ["es2022"],
    "exclude": ["./infra"]
}